<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:cardCornerRadius="50dp">

     <LinearLayout
         android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:orientation="horizontal"
         >

         <com.makeramen.roundedimageview.RoundedImageView
             android:id="@+id/cartItemPhoto"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentStart="true"
             android:layout_alignParentEnd="true"

             android:layout_marginTop="30dp"
             android:layout_marginStart="20dp"
             android:scaleType="fitXY"
             android:src="@drawable/uniforms"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintHorizontal_bias="0.495"
             app:layout_constraintStart_toStartOf="@+id/top"
             app:layout_constraintTop_toBottomOf="@+id/banner"
             app:riv_border_color="@color/white"
             app:riv_border_width="2dip"
             app:riv_corner_radius="30dip"
             app:riv_mutate_background="true"
             app:riv_oval="false"
             app:riv_tile_mode="clamp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


          <TextView
              android:id="@+id/cartQuantityHolder"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              android:layout_marginStart="10dp"
              android:text="Quantity :"
              android:textColor="@color/black"

              />

                <TextView
                    android:id="@+id/cartItemNameHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Item name : "
                    android:textColor="@color/black"

                    />

                <TextView
                    android:id="@+id/cartItemPriceHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Item price : "
                    android:textColor="@color/black"

                    />


                <TextView
                    android:id="@+id/cartItemTagHolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:text="Item tag : "
                    android:textColor="@color/black"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textSize="10sp"
                    android:text="Note: this item will be removedafter 30 minutes if not checkout "


                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btncirle"
                        android:text=" Cancel "
                        android:textSize="10sp"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/checkout"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10sp"
                        android:background="@drawable/btncirle"
                        android:text=" Checkout "
                        android:textSize="10sp"
                        android:textColor="@color/white" />
                </LinearLayout>




            </LinearLayout>




     </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>